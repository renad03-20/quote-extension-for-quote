{
  "manifest_version": 3,
  "name": "Quote of the Day",
  "version": "1.0",
  "description": "Shows a random quote every day",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [],
  "host_permissions": [
    "https://api.quotable.io/*"
  ]
}
